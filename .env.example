# ===================================
# DATABASE CONFIGURATION (NeonDB)
# ===================================
DB_HOST=your_neon_host_here
DB_PORT=5432
DB_NAME=neondb
DB_USER=neondb_owner
DB_PASSWORD=your_db_password_here
DB_SSL=true

# Alternative: Single connection string
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require

# ===================================
# SERVER CONFIGURATION
# ===================================
NODE_ENV=development
PORT=5001
API_VERSION=v1
BASE_URL=http://localhost:5001

# Allowed frontend origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===================================
# JWT CONFIGURATION
# ===================================
# Generate strong secrets using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_ACCESS_EXPIRY=15d
JWT_REFRESH_EXPIRY=7d

# ===================================
# OTP CONFIGURATION
# ===================================
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# ===================================
# SMS PROVIDER (MSG91)
# ===================================
SMS_PROVIDER=msg91
MSG91_AUTH_KEY=your_msg91_auth_key_here
MSG91_SENDER_ID=YOURID
MSG91_TEMPLATE_ID=your_template_id_here

# Alternative: Twilio
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# PAYMENT GATEWAY (Razorpay)
# ===================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Stripe (optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Payment Settings
PAYMENT_CURRENCY=INR
PAYMENT_TAX_PERCENTAGE=18
REFUND_PROCESSING_FEE=0

# ===================================
# FILE STORAGE (Cloudinary)
# ===================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
STORAGE_PROVIDER=cloudinary

# ===================================
# NOTIFICATIONS
# ===================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key

# SendGrid (Emails)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@example.com
FROM_NAME=Your App Name

# ===================================
# REDIS (Optional)
# ===================================
# REDIS_URL=redis://localhost:6379

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=info

# ===================================
# FILE UPLOAD CONFIG
# ===================================
CDN_BASE_URL=http://localhost:5000/uploads/profile-photos
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# DEPLOYMENT / KEEP-ALIVE
# ===================================
RENDER_EXTERNAL_URL=https://your-backend-url.onrender.com
